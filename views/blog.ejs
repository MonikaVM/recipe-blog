<%- include('partials/header') %>

<a href="/blog/new">Add new recipe</a>

<% recipes.forEach(recipe => { %>
    <div>
        <h1><%= recipe.name %></h1>
        <img src="<%= recipe.image %>">
        <p><%= recipe.ingredients %></p>
        <p><%= recipe.description %></p>
    </div>
<% }) %>

