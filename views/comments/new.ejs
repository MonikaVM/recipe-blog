<%- include('../partials/header') %>

<h1>Add comment to <%= recipe.name %></h1>

<form class="form-new" action="/blog/<%= recipe._id %>/comments" method="post">

    <label for="comment[text]">Text</label>
    <input type="text" name="comment[text]" placeholder="Add your comment here...">

    <label for="comment[author]">Author</label>
    <input type="text" name="comment[author]" placeholder="Add your name here...">

    <button>Add Comment</button>
    
</form>

