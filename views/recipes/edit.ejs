<%- include('../partials/header') %>

<div class="recipe-form">
    <h1>Edit <%= recipe.name %></h1>
    <form class="form-new" action="/recipes/<%= recipe._id %>?_method=put" method="post">
        <label for="name">Recipe name</label>
        <input type="text" name="name" value="<%= recipe.name %>">
        <label for="image">Recipe image</label>
        <input type="text" name="image" value="<%= recipe.image %>">
        <label for="intro">Introduction (max 170 characters)</label>
        <input type="text" name="intro" maxlength="170" value="<%= recipe.intro %>"><br>
        <label for="ingredients">Ingredients</label>
        <div class="input-container">
            <input id="ingredient-input" type="text" placeholder="ingredients">
            <div id="add-button"><span>Add</span></div>
        </div>
        <div id="ingredient-list" class="hidden">
            <% recipe.ingredients.forEach(ingredient => { %>
                <input class="ingredients" name="ingredients" type="text" value="<%= ingredient %>">
            <% }) %>
        </div>
        <label for="description">Description</label>
        <textarea name="description" rows="10"><%= recipe.description %></textarea>
        <button>Update Recipe</button>
    </form>
</div>

<%- include('../partials/aside') %>
<%- include('../partials/footer') %>