<%- include('../partials/header') %>

<div class="recipe-container">
    <div class="recipe-intro">
        <img src="<%= recipe.image %>">
        <div class="intro-text">
            <h1><%= recipe.name %></h1>
            <h3>Ingredients</h3><hr />
            <ul>
                <% recipe.ingredients.forEach(ingredient => { %>
                    <li><%= ingredient %></li>
                <% }) %>
            </ul>
            <% if (currentUser) { %>
                <div class="buttons">
                    <button><a href="/blog/<%= recipe._id %>/edit">Edit</a></button>
                    <form action="/blog/<%= recipe._id %>?_method=DELETE" method="post">
                        <button>Delete</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>
    <div class="recipe-description">
        <h3>Description</h3><hr />
        <p><%= recipe.description %></p>
    </div>
    <div class="comments">
        <h3>Comments</h3><hr />
        <% recipe.comments.forEach(comment => { %>
            <div class="comment">
                <p><strong>Author: </strong><%= comment.author.username %></p>
                <p class="comment-text"><%= comment.text %></p>
                <% if (currentUser) { %>
                    <div class="buttons">
                        <button><a href="/blog/<%= recipe.id %>/comments/<%= comment.id %>/edit">Edit</a></button>
                        <form action="/blog/<%= recipe.id %>/comments/<%= comment.id %>?_method=delete" method="post">
                            <button>Delete</button>
                        </form>
                    </div>
                    <% } %>
                </div>
                <% }) %>
        <button class="new-comment-btn"><a href="/blog/<%= recipe._id %>/comments/new">Add New Comment</a></button>
    </div>
</div>

<%- include('../partials/footer') %>